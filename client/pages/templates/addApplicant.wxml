<template name="addApplicant">

  <view class="over-layer container">
    <form class="form-inline" bindsubmit="submitForm">
      <view class="form-head">
        <text class="form-title">填写投保人信息</text> 
        <text class="form-subtitle bg-alert">投保人承担保险费支付之义务</text>
      </view>
      <view class="control-group">
        <text style="flex: 1; margin-top:10rpx; color:#555">{{applicant.type}}</text>
        <switch checked="{{false}}" bindchange="changeApplicantType"></switch> 
      </view>
      <view class="control-group">
          <input id="name" name="name" placeholder="{{placeholder.name}}"/>
      </view>
      <view class="control-group">
          <input id="id" name="id" placeholder="{{placeholder.id}}"/>
      </view>
      <view>
          <button form-type="submit" type="primary" size="18" loading="{{false}}" disabled="{{false}}" hover-class="defaultTap">保存</button>
      </view>
      
    </form>
  </view>
  
</template>